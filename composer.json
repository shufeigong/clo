{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist",
    "generate-salts": true
  },
  "autoload": {
    "psr-0": {"Roots\\Bedrock\\Installer": "scripts"}
  },
  "scripts": {
    "post-root-package-install": ["Roots\\Bedrock\\Installer::addSalts"]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "~1.0.9",
    "johnpbloch/wordpress": "^4.2.4",
    "roots/soil": "^3.4.0",
    "roots/wp-h5bp-htaccess": "^2.0.0",
    "symfony/var-dumper": "^2.6",
    "wpackagist-plugin/wpmandrill": "^1.33",
    "wpackagist-plugin/google-sitemap-generator": "^4.0.8",
    "wpackagist-plugin/wp-accessibility": "^1.4.0",
    "wpackagist-plugin/access-monitor": "^1.0.4",
    "wpackagist-plugin/wp-super-cache": "^1.4.0",
    "wpackagist-plugin/wp-better-emails": "^0.2",
    "wpackagist-plugin/tinymce-advanced": "^4.1.9",
    "yoast/wordpress-seo": "^2.3",
    "wpackagist-plugin/pods": "^2.5.4"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin",
        "roots/soil",
        "roots/wp-h5bp-htaccess",
        "wpackagist-plugin/wpmandrill",
        "wpackagist-plugin/wp-better-emails",
        "yoast/wordpress-seo",
        "wpackagist-plugin/access-monitor",
        "wpackagist-plugin/wp-accessibility",
        "wpackagist-plugin/tinymce-advanced",
        "wpackagist-plugin/pods"
      ],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
